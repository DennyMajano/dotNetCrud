@model IEnumerable<Libro>
@{
    ViewData["Title"] = "Lista de libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Catálogo de libros</h1>
<div class="container">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de libros</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success btn-block" asp-action="Create" asp-controller="Libros">Nuevo</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Id)</th>
                        <th>@Html.DisplayNameFor(m => m.Titulo)</th>
                        <th>@Html.DisplayNameFor(m => m.Descripcion)</th>
                        <th>@Html.DisplayNameFor(m => m.FechaLanzamiento)</th>
                        <th>@Html.DisplayNameFor(m => m.Autor)</th>
                        <th>@Html.DisplayNameFor(m => m.Precio)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var libro in Model)
                    {
                        <tr>
                            <td>@libro.Id</td>
                            <td>@libro.Titulo</td>
                            <td>@libro.Descripcion</td>
                            <td>@libro.FechaLanzamiento</td>
                            <td>@libro.Autor</td>
                            <td>@libro.Precio</td>
                            <td>
                                <a asp-controller="Libros" asp-action="Edit" asp-route-id="@libro.Id" class="btn btn-secondary">Editar</a>
                                <a asp-controller="Libros" asp-action="Delete" asp-route-id="@libro.Id" class="btn btn-warning">Eliminar</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros de libros</p>
        }
    </div>
</div>

